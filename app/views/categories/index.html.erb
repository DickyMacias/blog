<div class='large-container center-block'>
  <h1>Categorias</h1>

  <table>
    <thead>
      <tr>
        <th>Titulo</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><span class="badge badge-pill padding"
            style="background-color:<%= category.color %>"><%= category.title %></span></td>
        <td></td>
        <td><%= link_to 'Mostrar', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Crear Categoria', new_category_path %>
</div>